{
  "publisher": "InfernoDesign",
  "name": "codegasm-theme",
  "displayName": "Codegasm Theme",
  "description": "A dark theme for Visual Studio Code.",
  "version": "1.0.2",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inferno-design/codegasm-theme.git"
  },
  "bugs": {
    "url": "https://github.com/inferno-design/codegasm-theme/issues"
  },
  "keywords": [
    "theme",
    "dark",
    "codegasm"
  ],
  "categories": [
    "Themes"
  ],
  "maintainers": [
    {
      "name": "Inferno Design",
      "email": "support@infernodesign.com"
    }
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "packageManager": "pnpm@10.6.1",
  "contributes": {
    "themes": [
      {
        "label": "Codegasm",
        "uiTheme": "vs-dark",
        "path": "./themes/codegasm.json"
      }
    ]
  },
  "galleryBanner": {
    "color": "#5c16c5",
    "theme": "dark"
  },
  "scripts": {
    "build": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts --include './src/**/*.ts'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "vsce package --no-dependencies --out ./releases/ --no-yarn",
    "prepublishOnly": "npm run build",
    "publish": "bumpp --all && vsce publish --no-dependencies",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/format": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@inferno-design/eslint-config": "^2.5.0",
    "@inferno-design/typescript-config": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.9",
    "@types/tinycolor2": "^1.4.6",
    "@types/vscode": "^1.98.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "fs-extra": "^11.3.0",
    "ovsx": "^0.10.1",
    "prettier": "^3.5.3",
    "tinycolor2": "^1.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "esbuild"
    ]
  }
}
